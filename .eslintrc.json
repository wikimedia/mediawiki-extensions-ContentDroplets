{
	"root": true,
	"extends": [
		"wikimedia/client-es6",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"ext": "readonly",
		"ve": "readonly"
	},
	"rules": {
		"max-len": "off",
		"mediawiki/class-doc": "off",
		"no-implicit-globals": "off",
		"es-x/no-array-prototype-includes": "off",
		"es-x/no-object-values": "off"
	},
	"parserOptions": {
		"ecmaVersion": 2017
	}
}
